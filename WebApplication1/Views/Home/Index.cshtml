@model WebApplication1.Models.TestViewModel
@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("SaveRecord", "Home", null, FormMethod.Post))
{
<div>
    <div>
        @Html.LabelFor(m => m.Given)
        @Html.TextBoxFor(m => m.Given)
    </div>
    <div>
        @Html.LabelFor(m => m.Middle)
        @Html.TextBoxFor(m => m.Middle)
    </div>
    <div>
        @Html.LabelFor(m => m.Family)
        @Html.TextBoxFor(m => m.Family)
    </div>
    <div>
        @Html.LabelFor(m => m.DateOfBirth)
        @Html.EditorFor(m => m.DateOfBirth)
    </div>
    <div>
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address)
    </div>
    <div>
        @Html.LabelFor(m => m.Address1)
        @Html.TextBoxFor(m => m.Address1)
    </div>
    <div>
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City)
    </div>
    <div>
        @Html.LabelFor(m => m.State)
        @Html.TextBoxFor(m => m.State)
    </div>
    <div>
        @Html.LabelFor(m => m.PostalCode)
        @Html.TextBoxFor(m => m.PostalCode)
